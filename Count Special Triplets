#Count Special Triplets
class Solution:
    def specialTriplets(self, nums):
        MOD = 10**9 + 7

        from collections import Counter
        right = Counter(nums)
        left = Counter()

        result = 0

        for j in range(len(nums)):
            val = nums[j]
            right[val] -= 1

            target = val * 2
            if target in left and target in right:
                result = (result + left[target] * right[target]) % MOD

            left[val] += 1

        return result
        
