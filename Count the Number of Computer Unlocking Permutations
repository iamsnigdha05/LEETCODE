class Solution:
    def countPermutations(self, complexity):
        MOD = 10**9 + 7
        n = len(complexity)
         
        base = complexity[0]
        for i in range(1, n):
            if complexity[i] <= base:
                return 0

         
        res = 1
        for i in range(1, n):
            res = (res * i) % MOD
        return res

        
